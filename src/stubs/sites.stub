server {
	listen 80;
	listen [::]:80;
	root {{ root }};
	index index.php index.html index.htm index.nginx-debian.html;
	server_name {{ domain }};

	location / {
		try_files $uri $uri/ =404;
	}

	location ~ \.php$ {
		include snippets/fastcgi-php.conf;
		fastcgi_pass unix:/var/run/php/php{{ phpVersion }}-fpm.sock;
	}

	location ~ /\.ht {
		deny all;
	}
}