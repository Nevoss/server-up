{
  "name": "server-up",
  "version": "0.1.0",
  "description": "Running php and node server utilities tool",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "files": [
    "dist"
  ],
  "types": "dist/index.d.ts",
  "bin": {
    "server-up": "./dist/index.js"
  },
  "scripts": {
    "build": "rimraf dist/ && tsc -p . && npm run copy:stubs",
    "watch": "tsc -w",
    "test": "sudo npm i -g && server-up",
    "refresh": "rm -rf ./node_modules ./package-lock.json && npm install",
    "copy:stubs": "mkdir dist/stubs && cp -r src/stubs/* dist/stubs/"
  },
  "author": "Nevo Golan <nevos12@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "commander": "^4.1.1"
  },
  "devDependencies": {
    "@types/node": "^13.7.4",
    "rimraf": "^3.0.2",
    "rollup": "^1.31.1",
    "rollup-plugin-typescript2": "^0.26.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.2"
  }
}
